---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BreadCrumb from '../components/BreadCrumb.astro';
import { Image } from '@astrojs/image/components';
import Robots from '../components/Robots.astro';
import BaseHead from '../components/BaseHead.astro';
import '../styles/main.scss';
const { setup = {
	showCanonical: true,
	showOpenGraphTags: true
} } = Astro.props;
const titlePrefix = (import.meta.env.DEV) ? 'ASTRO: ' : '';
const title = `${titlePrefix}${setup.title}` ?? 'Welcome!';

const breadCrumbLinks = setup.breadBrumbPaths ?? null;
const url = new URL(Astro.request.url);
const isHomePage = (url.pathname === '/') ? true : false;
const showCanonicalLink = setup.showCanonical ?? true;
const showOpenGraphTags = setup.showOpenGraphTags ?? true;
---
<html lang="en">

<head>
<Robots />

<BaseHead title={title} description={setup.description} 
	keywords={setup.keywords} showCanonical={showCanonicalLink}
	showOpenGraphTags={showOpenGraphTags} />

</head>

<body>
	<Header />

	<main class="main">
		<div class="container">
			<div class={`content-cols${(isHomePage) ? ' cols-home' : ''}`}>
				<div class="col-1 p-block-3">
					{breadCrumbLinks && (
						<BreadCrumb paths={breadCrumbLinks} />
					)}
					<slot />
				</div>
				<div class="col-2">
					<div class="img-wrapper">
						<Image 
							src={import('../../public/assets/theme/generic-graphic.jpg')}
							alt="Image of people mingling at the Google booth at a conference" 
							width={400} 
							height={200} />
					</div>
					<div class="brown">
						{isHomePage && (
							<div class="left">
								<Image 
									src={import('../../public/assets/theme/timeline-graphic-interim.jpg')}
									alt="Industry timeline graphic with company logos and years" 
									width={190} 
									height={410} />
							</div>
						)}
						<div class="right"></div>
					</div>
				</div>
			</div>
		</div>
	</main>
	<Footer />

</body>

</html>
<script>
    import '../scripts/links.ts';
</script>