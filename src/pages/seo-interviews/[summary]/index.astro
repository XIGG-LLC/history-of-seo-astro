---
import ActionButton from '../../../components/ActionButton.astro';
import InterviewThumbnail from '../../../components/InterviewThumbnail.astro';
import BaseLayout from '../../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
    let data = Astro.fetchContent('../../../data/interviews/*.md');
    
    return data.filter(d => d.sortorder !== 0).map(item => {
        return {
            params: {summary: item.slug },
            props: { item }
        }
    });
}

const { item } = Astro.props;
const title = item.title;
const propsObj = {
	title: `Summary of Interview with ${item.title}`,
    metaDescription: item.summaryMetaDescription ?? '',
    metaKeywords: item.summaryMetaKeywords ?? '',
    breadBrumbPaths: [
        {name: 'The Interviews', path: 'seo-interviews/'},
        {name: item.title, path: ``}
    ]
}

const descriptionText = item.mediumdescription ?? item.description;

---
<style>
.back {
    padding-top: 2rem;
}
</style>
<BaseLayout setup={propsObj} title={title}>
    <article>
    
        <header>
            <h1>{item.title}</h1>
        </header>

        <div>
            {item.thumbnail && item.thumbnail !== '' && (
                <InterviewThumbnail src={item.thumbnail} />
            )}
            <div set:html={descriptionText}></div>
            
        </div>

        <ActionButton 
            link={`/seo-interviews/${item.slug}/interview/`}
            extraCss="mb-2"
            altText="Read the entire interview">interview</ActionButton>

    </article>
</BaseLayout>