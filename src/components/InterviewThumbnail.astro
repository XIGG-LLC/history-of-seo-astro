---
import { Picture } from "@astrojs/image/components";
const { src, altText, title, extraCss } = Astro.props;
const cssClass = `thumbnail${(extraCss !== undefined) ? ` ${extraCss}` : ''}`;
const imgName = `/assets/interviewees/${src}`;

---
<style>
    .thumbnail {
        float: left;
        margin: 0 1rem 1rem 0;
    }
</style>

<Picture 
    class={cssClass} 
    src={imgName} 
    widths={[100]} 
    aspectRatio={1} 
    width={100} 
    height={100} 
    format={'jpg'} 
    alt={altText ?? ''} 
    />
