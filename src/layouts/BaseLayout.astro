---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BreadCrumb from '../components/BreadCrumb.astro';
import { getImage } from 'astro:assets';
import Robots from '../components/Robots.astro';
import BaseHead from '../components/BaseHead.astro';
import '../styles/main.scss';
const { setup = {
	showCanonical: true,
	showOpenGraphTags: true
} } = Astro.props;
const titlePrefix = (import.meta.env.DEV) ? 'ASTRO: ' : '';
const title = `${titlePrefix}${setup.title}` ?? 'Welcome!';

const breadCrumbLinks = setup.breadBrumbPaths ?? null;
const url = new URL(Astro.request.url);
const isHomePage = (url.pathname === '/') ? true : false;
const showCanonicalLink = setup.showCanonical ?? true;
const showOpenGraphTags = setup.showOpenGraphTags ?? true;

const { src: genericSrc } = await getImage({
	src: import('../images/theme/generic-graphic.jpg'),
	alt: '',
	quality: 50,
	format: 'webp'
});

const { src: timelineSrc } = await getImage({
	src: import('../images/theme/timeline-graphic-interim.jpg'),
	alt: '',
	quality: 75,
	format: 'webp'
});


---
<html lang="en">

<head>
<Robots />

<BaseHead title={title} description={setup.description} 
	keywords={setup.keywords} showCanonical={showCanonicalLink}
	showOpenGraphTags={showOpenGraphTags} />

</head>

<body>
	<Header />

	<main class="main">
		<div class="container">
			<div class={`content-cols${(isHomePage) ? ' cols-home' : ''}`}>
				<div class="col-1 p-block-3">
					{breadCrumbLinks && (
						<BreadCrumb paths={breadCrumbLinks} />
					)}
					<slot />
				</div>
				<div class="col-2">
					<div class="img-wrapper">
						<img 
							src={genericSrc}
							alt="Image of people mingling at the Google booth at a conference" 
							width="400" 
							height="200" />
					</div>
					<div class="brown">
						{isHomePage && (
							<div class="left">
								<img 
									src={timelineSrc}
									alt="Industry timeline graphic with company logos and years" 
									width="190" 
									height="410" />
							</div>
						)}
						<div class="right"></div>
					</div>
				</div>
			</div>
		</div>
	</main>
	<Footer />

</body>

</html>
<script>
    import '../scripts/links.js';
</script>