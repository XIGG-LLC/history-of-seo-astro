---
const { src, altText, extraCss, width, height } = Astro.props;
const cssClass = `${(extraCss !== undefined) ? ` ${extraCss}` : ''}`;

const imgName = `/assets/${src}`;

---
{src && (
<img 
    class={cssClass}
    src={imgName} 
    width={width} 
    height={height} 
    alt={altText ?? ''}
    title={altText ?? ''} />
)}
