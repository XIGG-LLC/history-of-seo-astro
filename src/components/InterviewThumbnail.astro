---
import { Picture } from "@astrojs/image/components";
const { src, altText, extraCss } = Astro.props;
const cssClass = `thumbnail${(extraCss !== undefined) ? ` ${extraCss}` : ''}`;

---
<style>
    .thumbnail {
        float: left;
        margin: 0 1rem 1rem 0;
    }
</style>

<Picture 
    class={cssClass} 
    src={import(`../images/interviewees/${src.replace('.jpg', '')}.jpg`)} 
    widths={[100]} 
    aspectRatio={1} 
    width={100} 
    height={100} 
    alt={altText ?? ''} 
    />
